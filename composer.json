{
    "name": "oxcom/symfony-rollbar-bundle",
    "description": "Bundle for Symfony that integrates Rollbar tracker",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "rollbar",
        "errors",
        "bundle"
    ],
    "authors": [
        {
            "name": "OxCom",
            "email": "lancer.oxcom@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "SymfonyRollbarBundle\\": "./" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "Tests/"},
        "files": [
            "Tests/Fixtures/app/AppKernel.php"
        ]
    },
    "require": {
        "php": ">=5.6",
        "monolog/monolog": "^1.23",
        "rollbar/rollbar": "^1.6",
        "symfony/dependency-injection": "^2.8|~3.0|~4.0|~4.1|~4.2",
        "symfony/config": "^2.8|~3.0|~4.0|~4.1|~4.2",
        "symfony/http-kernel": "^2.8|~3.0|~4.0|~4.1|~4.2",
        "symfony/console": "^2.8|~3.0|~4.0|~4.1|~4.2",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/polyfill-mbstring": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.5",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "squizlabs/php_codesniffer": "^3.2",
        "matthiasnoback/symfony-dependency-injection-test": "^1.2||^2.3",
        "symfony/phpunit-bridge": "^4.0",
        "twig/twig": "^1.35||^2.4"
    },
    "scripts": {
        "test": [
            "composer install",
            "./vendor/bin/phpcs --standard=psr2 DependencyInjection/ EventListener/ Provider/ Tests/SymfonyRollbarBundle",
            "./vendor/bin/phpunit -c phpunit.xml.dist"
        ]
    }
}
